<!DOCTYPE html>
<html lang="en">

<%- include('./partials/head',{estilos: 'index-styles' , responsive: 'index-responsive' , titulo: 'Home' }) %>

    <body>
        <%- include('./partials/header') %>
            <main>
                <div class="search-bar-div">
                    <div class="search-bar-div-2">
                        <form class="search-bar">
                            <input type="text" placeholder="buscar producto..." name="search">
                            <button type="submit" class="button-search-bar">Buscar</button>
                        </form>
                    </div>
                </div>
                <div class="titulo-h3">
                    <div class="titulo-h3">
                        <h3>PRODUCTOS DESTACADOS</h3>
                    </div>
                </div>
                <div class="conteiner-main">
                    <% for( let index=0; index < 3; index++ ) { %>
                        <article class="articulo-box">
                            <div class="art-div-box">
                                <img src="<%= allProducts[index].image %>" alt="image_boat">
                            </div>
                            <div class="detalle">
                                <div class="title-producto">
                                    <p>
                                        <%= allProducts[index].name %>
                                    </p>
                                </div>
                                <div class="modelo">
                                    <p>
                                        <%= allProducts[index].category %>
                                    </p>
                                </div>
                                <div class="precio">
                                    <p>
                                        $<%= allProducts[index].price %>
                                    </p>
                                </div>
                                <div class="buy-button">
                                    <a href="/products/detail/<%= allProducts[index].id %>">
                                        <button>
                                            DETALLES
                                        </button>
                                    </a>
                                </div>
                            </div>
                        </article>
                        <% } %>
                </div>
                <div class="see-more-button">
                    <div class="see-more-button">
                        <a href="/products">
                            <button>
                                VER M√ÅS
                            </button>
                        </a>
                    </div>
                </div>
            </main>
            <%- include('./partials/footer') %>
    </body>

</html>
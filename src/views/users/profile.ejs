<!DOCTYPE html>
<html lang="en">

<%- include('../partials/head',{estilos: 'profile' , responsive: 'profile-responsive' , titulo: 'Perfil de Usuario' })
    %>

    <body>
        <section class="home"></section>

        <%- include('../partials/header',{includeSearchBar: false}) %>
            <main>

                <div class="profile-container">
                    <div class="profile-name">
                        <%= `${user.first_name} ${user.last_name}` %>
                    </div>
                    <img class="profile-image-view" src="<%= JSON.parse(user.image).url %>" alt="Imagen de perfil">
                    <div class="profile-email">
                        <%= user.email %>
                    </div>
                    <a href="#" class="edit-profile-button">Editar Perfil</a>
                </div>

            </main>
            <%- include('../partials/footer') %>

    </body>

</html>
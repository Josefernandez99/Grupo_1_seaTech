<!DOCTYPE html>
<html lang="en">

<%- include('../partials/head',{estilos: 'listaProductos' , responsive: 'listaProductos_responsive' ,
    titulo: 'Productos' }) %>

    <body>
        <%- include('../partials/header',{includeSearchBar: true}) %>

            <main>
                <div class="conteiner-main">
                    <% allProducts.forEach(articulo=> { %>
                        <article class="articulo">
                            <div>
                                <img src="<%= JSON.parse(articulo.image).url %>" alt="cookies">
                            </div>
                            <div class="detalle">
                                <div class="title-producto">
                                    <p>
                                        <%= articulo.name %>
                                    </p>
                                </div>
                                <div class="modelo">
                                    <p>
                                        <%= articulo.tiene_una_category.name %>
                                    </p>
                                </div>
                                <div class="precio">
                                    <p>$<%= articulo.price %>
                                    </p>
                                </div>
                                <div class="buy-button">
                                    <a href="/products/detail/<%= articulo.uuid %>"><button>DETALLES</button></a>
                                </div>
                            </div>
                        </article>
                        <% }) %>
                </div>
            </main>

            <%-include( "../partials/footer" )%>
    </body>

</html>